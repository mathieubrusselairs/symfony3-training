{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogpost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogPost.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blogPost.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blogPost.body }}</td>
            </tr>
            <tr>
                <th>Publicationdate</th>
                <td>{{ blogPost.publicationdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

{# TODO: Adding comment section #}
    <h2>Comments</h2>
     {{ form_start(text_form) }}
        <input type="text" value="text">
    {{ form_end(text_form) }} 

    {% for text in texts %}
        {{text.text}}
    {% endfor %}

    <ul>
        <li>
            <a href="{{ path('blogpost') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blogpost_edit', { 'id': blogPost.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
